# Database Configuration
DATABASE_URL=sqlite:///./laundryconnect.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/laundryconnect

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Admin User Configuration
FIRST_SUPERUSER_EMAIL=admin@laundryconnect.co.ke
FIRST_SUPERUSER_USERNAME=admin
FIRST_SUPERUSER_PASSWORD=admin123

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://127.0.0.1:3000"]
# Optional: Email Configuration
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@laundryconnect.co.ke
EMAILS_FROM_NAME=LaundryConnect Kenya